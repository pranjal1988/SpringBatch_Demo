	</beans:bean> -->

	<beans:bean id="dataSource" class="com.github.pranjal1988.demo.Dummy"/>

	<beans:bean id="transactionManager" class="org.springframework.batch.support.transaction.ResourcelessTransactionManager" lazy-init="true"/>

</beans:beans>